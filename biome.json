{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/.wrangler/**",
			"**/tamagui.css",
			"**/workbox*.js",
			"**/sw*.js",
			"**/service-worker.js",
			"**/fallback*.js",
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/ios/**",
			"**/.git/**",
			"**/.vscode/**",
			"**/.android/**",
			"**/.DS_Store/**",
			"**/Thumbs.db/**",
			"**/.tamagui*",
			"**/.next*",
			"**/tsconfig.tsbuildinfo"
		],
		"include": ["src/**/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {
						"attributes": ["className"],
						"functions": ["cn"]
					}
				}
			},
			"style": {
				"noUnusedTemplateLiteral": {
					"level": "off"
				}
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "warn"
				},
				"noUnusedFunctionParameters": {
					"level": "warn"
				},
				"noUnusedImports": {
					"level": "warn"
				}
			},
			"a11y": {
				"noLabelWithoutControl": {
					"level": "off",
					"options": {}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true
		},
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
